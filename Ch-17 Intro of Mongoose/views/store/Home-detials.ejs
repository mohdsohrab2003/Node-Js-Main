<%- include('../partials/head.ejs') %>

<body
  class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50"
>
  <%- include('../partials/navbar.ejs') %>

  <!-- Header with back button -->
  <div class="bg-white/90 backdrop-blur-md shadow-lg border-b">
    <div class="max-w-6xl mx-auto px-4 py-4">
      <a
        href="/"
        class="inline-flex items-center gap-2 px-4 py-2 text-gray-700 hover:bg-blue-50 rounded-lg transition-colors"
      >
        <svg
          class="h-4 w-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"
          ></path>
        </svg>
        Back to Listings
      </a>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-6xl mx-auto px-4 py-8">
    <div
      class="bg-white/95 backdrop-blur-sm rounded-2xl shadow-2xl border-0 overflow-hidden"
    >
      <!-- Hero Image Section -->
      <div class="relative">
        <img
          src="<%= home.imageLink %>"
          alt="<%= home.house_name %>"
          class="w-full h-96 object-cover"
        />
        <div
          class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"
        ></div>
        <div
          class="absolute top-4 right-4 bg-green-500 text-white px-3 py-1 rounded-full text-sm font-medium"
        >
          Available
        </div>
      </div>

      <!-- Content Section -->
      <div class="p-8">
        <div class="grid lg:grid-cols-3 gap-8">
          <!-- Main Details -->
          <div class="lg:col-span-2 space-y-6">
            <div>
              <h1 class="text-4xl font-bold text-gray-900 mb-2">
                <%= home.house_name %>
              </h1>
              <div class="flex items-center gap-2 text-gray-600 mb-4">
                <svg
                  class="h-5 w-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                  ></path>
                </svg>
                <span class="text-lg"><%= home.Location %></span>
              </div>
            </div>

            <div class="prose prose-gray max-w-none">
              <p class="text-gray-700 text-lg leading-relaxed">
                <%= home.discription %>
              </p>
            </div>

            <!-- Property Features -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
              <div class="flex items-center gap-3 p-4 bg-blue-50 rounded-lg">
                <svg
                  class="h-6 w-6 text-blue-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2V7zm16 0V5a2 2 0 00-2-2H7a2 2 0 00-2 2v2h14z"
                  ></path>
                </svg>
                <div>
                  <div class="font-semibold text-gray-900">3</div>
                  <div class="text-sm text-gray-600">Bedrooms</div>
                </div>
              </div>

              <div class="flex items-center gap-3 p-4 bg-green-50 rounded-lg">
                <svg
                  class="h-6 w-6 text-green-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"
                  ></path>
                </svg>
                <div>
                  <div class="font-semibold text-gray-900">2</div>
                  <div class="text-sm text-gray-600">Bathrooms</div>
                </div>
              </div>

              <div class="flex items-center gap-3 p-4 bg-purple-50 rounded-lg">
                <svg
                  class="h-6 w-6 text-purple-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"
                  ></path>
                </svg>
                <div>
                  <div class="font-semibold text-gray-900">1800</div>
                  <div class="text-sm text-gray-600">sq ft</div>
                </div>
              </div>

              <div class="flex items-center gap-3 p-4 bg-orange-50 rounded-lg">
                <svg
                  class="h-6 w-6 text-orange-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                  ></path>
                </svg>
                <div>
                  <div class="font-semibold text-gray-900">House</div>
                  <div class="text-sm text-gray-600">Type</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Sidebar - Pricing & Contact -->
          <div class="space-y-6">
            <!-- Price Card -->
            <div
              class="border-2 border-blue-100 bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl p-6"
            >
              <div class="flex items-center gap-2 mb-4">
                <svg
                  class="h-6 w-6 text-blue-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"
                  ></path>
                </svg>
                <span class="text-3xl font-bold text-gray-900"
                  >$<%= home.price %></span
                >
                <span class="text-gray-600">/ night</span>
              </div>

              <div class="flex items-center gap-3 mb-4">
                <%- include('../partials/favourite.ejs') %>

                <button
                  class="w-full bg-blue-600 hover:bg-blue-700 text-white py-1 px-4 rounded-lg text-lg font-semibold shadow-lg hover:shadow-xl transition-all duration-200"
                >
                  Book Now
                </button>
              </div>
            </div>

            <!-- Owner Contact Card -->
            <div class="border-2 border-gray-100 rounded-xl p-6 bg-white">
              <h3 class="text-xl font-semibold text-gray-900 mb-4">
                Contact Owner
              </h3>
              <div class="space-y-3">
                <div class="flex items-center gap-3">
                  <svg
                    class="h-5 w-5 text-gray-500"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                    ></path>
                  </svg>
                  <span class="text-gray-700"
                    ><%= home.first_name %> <%= home.last_name %></span
                  >
                </div>
                <div class="flex items-center gap-3">
                  <svg
                    class="h-5 w-5 text-gray-500"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                  <span class="text-gray-700">+91 <%= home.phone %></span>
                </div>
              </div>
              <button
                class="w-full mt-4 border-2 border-blue-200 text-blue-600 hover:bg-blue-50 hover:border-blue-300 bg-transparent py-2 px-4 rounded-lg transition-colors"
              >
                Contact Owner
              </button>
            </div>

            <!-- Quick Actions -->
            <div class="border-2 border-gray-100 rounded-xl p-6 bg-white">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">
                Quick Actions
              </h3>
              <div class="space-y-2">
                <button
                  class="w-full text-left px-4 py-2 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors"
                >
                  Share Property
                </button>
                <button
                  class="w-full text-left px-4 py-2 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors"
                >
                  Schedule Tour
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Custom Styles for Enhanced Animations -->
  <style>
    .transition-all {
      transition: all 0.3s ease;
    }

    .hover\:shadow-xl:hover {
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1),
        0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    .backdrop-blur-sm {
      backdrop-filter: blur(4px);
    }

    .backdrop-blur-md {
      backdrop-filter: blur(12px);
    }

    /* Smooth hover animations */
    button:hover,
    a:hover {
      transform: translateY(-1px);
    }

    /* Card hover effects */
    .border-2:hover {
      transform: translateY(-2px);
      transition: transform 0.2s ease;
    }
  </style>
</body>
